<% include('../layouts/heder.ejs') %>

<style>
  body{
    background:cornsilk;
  }
  .box{
margin:0 auto; 
width:600px;
height: 300px;
padding:30px;
background:whitesmoke;
border:3px solid #333;
}
</style>
<h1  align="center"> Edit User</h1>
<div class="box">
<form action="" method="POST">
    <input type="name" name="name" placeholder="Enter Name" value="<%=user.name %>" required>
    <br><br>
    <input type="email" name="email" placeholder="Enter Email" value="<%=user.email %>" required>
    <br><br>
    <input type="text" name="mob" placeholder="Enter Mobile" value="<%=user.mobile %>" required >
    <br><br>
    <label>Verified</label>
    <input type="radio" name="verify" value="1" <% if(user.is_varified==1){%> checked <% }%>>
    <label>Unverified</label>
    <input type="radio" name="verify" value="0" <% if(user.is_varified==0){%> checked <% }%>>
    <br><br>
    <input type="hidden" name="id"  value="<%=user._id %>" required class="box">
    <input type="submit" value="Update User">
    
</form>
<a  align="center" href="/admin/dashboard">Back to dashboard</a>
</div>
<%
  if(typeof message!=='undefined'){
      %>
      <p style="color:black;"><%=message%></p> 
      <%
  }
%>

<% include('../layouts/foot.ejs') %>-->
